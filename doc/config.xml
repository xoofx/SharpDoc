<config xmlns="SharpDoc">
  <!-- Title of the generated documentation -->
  <title>SharpDoc Documentation</title>

  <!-- Defines the styles used. Apply first Paradox and after Standard style -->
  <style>Standard</style>
  <!-- <style-dir>Style</style-dir> -->

  <!-- Generate default and docpak -->
  <output-dir>.\sharpdoc_output</output-dir>
  
  <!-- Exclude MTPS namespace from output -->
  <exclude>SharpDoc.MTPS</exclude>

  <!-- Topics -->
  <topic id="main.md" page-id="main" name="SharpDoc Documentation" filename="main.md">

    <topic id="usage.md" name="Usage" filename="usage.md"/>

    <!-- Special topic X:ClassLibrary to include generated class library references. No filename to setup as it is generated -->
    <topic id="X:ClassLibraryReference" page-id="api" name="Class Library Reference" index="100" on-url="true"/>
  </topic>

  <!-- List the assemblies to include for the class library-->
  
  <!-- Standard Binaries -->
  <source api="default|Windows Desktop - .NET 4.5" xml="..\Build\Bin\SharpDoc.xml">..\Build\Bin\SharpDoc.exe</source>
 </config>
